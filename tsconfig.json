{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib/",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "rootDir": "./src"
  },
  "include": ["./src/*","./src/*.json"],
  "exclude": ["node_modules"]
}
